def calculate_area(radius):
    """Calculate the area of a circle given its radius."""
    pi = 3.14159  # Value of pi
    area = pi * (radius ** 2)  # Area formula: πr²
    return area  # Return the calculated area

def main():
    """Main function to execute the program."""
    # Prompt the user for the radius
    radius_input = float(input("Enter the radius of the circle: "))  # Convert input to float
    area = calculate_area(radius_input)  # Call the function to calculate area
    
    # Display the result
    print(f"The area of the circle with radius {radius_input} is: {area}")  # Output the result

# Check if the script is being run directly
if __name__ == "__main__":
    main()  # Execute the main function
